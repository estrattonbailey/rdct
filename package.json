{
  "name": "rdct",
  "version": "1.0.0",
  "description": "Deeply redact all the things",
  "main": "dist/rdct.js",
  "browser": "dist/rdct.umd.js",
  "module": "dist/rdct.es.js",
  "scripts": {
    "dev": "microbundle watch",
    "build": "microbundle",
    "precommit": "lint-staged",
    "prepare": "npm run build",
    "pretest": "npm run build",
    "test": "mocha"
  },
  "keywords": ["redact", "redaction", "deep redact", "deep redaction"],
  "files": ["index.js", "dist"],
  "author": "Brian Wendt <brianwendt@outlook.com> (https://bwendt.com)",
  "license": "MIT",
  "repository": "whiskeredwonder/rdct",
  "devDependencies": {
    "chai": "4.1.2",
    "husky": "0.14.3",
    "lint-staged": "6.1.0",
    "microbundle": "0.4.3",
    "mocha": "5.0.0",
    "prettier": "1.10.2"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": ["prettier"]
  },
  "lint-staged": {
    "*.{js,json}": ["prettier --write", "git add"]
  },
  "prettier": {
    "bracketSpacing": false,
    "jsxBracketSameLine": true,
    "semi": false,
    "singleQuote": true
  }
}
